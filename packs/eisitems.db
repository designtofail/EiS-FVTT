{"_id":"bap3Ve06frZbQZHd","name":"Suffused with Magic","permission":{"default":0},"type":"talent","data":{"description":{"type":"String","label":"Description","value":"<p><span class=\"fontstyle0\">All spells cast within Willpower Bonus yards of you gain +1 SL to cast. This Bonus may only be claimed once per casting, no matter how many Characters with this Talent are in the vicinity.</span></p>"},"max":{"type":"String","label":"Max Advances","value":"1"},"advances":{"type":"Number","label":"Advances","value":1},"career":{"value":"","type":"String","label":"Career"},"tests":{"type":"String","label":"Tests","value":""}},"sort":800001,"flags":{},"img":"modules/eis/icons/tzeentch.png"}
{"_id":"dC6HoL4MMZ78CAX1","name":"Ring of Opsianon","permission":{"default":0},"type":"trapping","data":{"description":{"type":"String","label":"Description","value":"<p>Gideon wears a gold ring set with a black, faceted obsidian stone.</p>"},"quantity":{"type":"Number","label":"Quantity","value":1},"encumbrance":{"type":"Number","label":"Encumbrance","value":0},"price":{"type":"String","label":"Price","gc":"0","ss":"0","bp":"0"},"availability":{"type":"String","label":"Availability","value":"None"},"location":{"type":"Number","label":"Location","value":0},"trappingType":{"type":"String","label":"Trapping Type","value":""},"spellIngredient":{"type":"String","value":""}},"sort":3500001,"flags":{},"img":"modules/eis/icons/ring-of-opsianon.png"}
